<header class='header'>
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> navCSS list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="hero">
	<img src="{{image}}" alt="Hero image" class="hero_image">
	<div class="hero_content">
		<h1 class="hero_title">{{heading}}</h1>
		<p class="hero_text">{{description}}</p>
		<a href="{{href}}" class="button hero_button">{{button}}</a>
	</div>
</div>
{{/with}}

<main class="features">
	{{#each featured}}
	<div class="card">
		<div class="card_image" style="background-image: url({{photo}})"></div>
		<h2 class="card_title">{{heading}}</h2>
		<p class="card_text">{{info}}</p>
		<a href="{{linkUrl}}" class="card_button">{{linkText}}</a>
	</div>
	{{/each}}
</main>


<div class="form">
	{{#each actions}}
	<div>
		<div class="form_content">
			<h3 class="form_title">{{heading}}</h3>
		</div>
		<div class="form_action">
			<a href="{{url}}" class="button form_button">{{text}}</a>
		</div>
	</div>
	{{/each}}
</div>



<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>navCSS list=links isVertical=true}}
	</div>
	{{/each}}
</footer>