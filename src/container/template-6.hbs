<header class='header'>
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> navCSS list=header}}
		</div>
	</nav>
</header>

<div class="hero">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class=" form_input" name="{{name}}"
				id="form-input-{{id}}" />
			{{/each}}
		</div>
		<div class="form_checkbox">

			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>

	</form>
	{{/with}}
</div>

<main class="main">
	{{#with updates}}
	<div class="updates">
		<h1 class="upd_title">{{title}}</h1>
		{{#each list}}
		<div class="upd">
			<span class="badge_img"></span>
			<div class="upd_gen">
				<strong class="upd_name">{{nickname}}</strong>
				<p class="upd_text">{{description}}</p>
			</div>
		</div>
		{{/each}}
		<a href="#" class="upd_link">All messages</a>
	</div>
	{{/with}}
</main>

<div class="expirience">
	{{#with expirience}}
	<div class="badge_hot">{{badge}}</div>
	<div class="exp_gen">
		<strong class="exp_title">{{title}}</strong>
		<div>
			{{#each list}}
			<div class="exp_card">
				<strong class="exp_card_title">{{name}}</strong>
				<p class="exp_card_descr">{{details}}</p>
			</div>
			{{/each}}

		</div>
	</div>
	{{/with}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>navCSS list=links isVertical=true}}
	</div>
	{{/each}}
</footer>