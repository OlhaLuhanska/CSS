<main class="row">
    <div class="card">
        {{#with navigation}}
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a href={{href}} class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <section class="mt-5">
        {{#with newsBlock}}
        <h2 class="text-center mb-4">{{title}}</h2>

        <div class="row gy-3 gx-2">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        {{title}}
                        {{#if isTop}}
                        <span class="badge text-bg-danger rounded-pill text-uppercase">топ</span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-success rounded-pill text-uppercase">нова</span>
                        {{/if}}
                    </div>
                    <div class="card-body">
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{#with goodsBlock}}
        <div class="row mb-5">
            <div class="col-12">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        {{#if isActive}}
                        <a href="#" class="nav-link active">{{text}}</a>
                        {{/if}}
                        {{#if isDisabled}}
                        <a href="#" class="nav-link disabled">{{text}}</a>
                        {{/if}}
                        {{#unless isActive}}
                        {{#unless isDisabled}}
                        <a href="#" class="nav-link">{{text}}</a>
                        {{/unless}}
                        {{/unless}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="row">
            {{#each cards}}
            <div class="col-4">
                <div class='card'>
                    <img class="card-img-top" src={{image}} alt={{title}}>
                    <div class='card-body'>
                        <h5 class="card-title">{{title}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill text-uppercase">hot!</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill text-capitalize">нове</span>
                            {{/if}}
                        </h5>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{#with subscribe}}
        <div class="card text-bg-dark ps-2 pt-3">
            <h2 class="mb-4">{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div class="flex-column mb-2">
                <a href={{link}} class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{#with service}}
        <div class="card text-bg-success text-center ps-2 pt-3">
            <h2 class="mb-4">{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div class="flex-column mb-3">
                <a href={{link}} class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

