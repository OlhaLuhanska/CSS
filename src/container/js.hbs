{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <main>
    <section>
        {{>title data=name big=true}}
        <def>{{description}}</def>        
    </section>
    <hr>
    <section>
        {{#with history}}
            <b>Founder: {{founder}}</b>,
            {{year}}
        {{/with}}
    </section>
    <hr>
    <section>
        {{>title data="Types" big=false}}
        {{>js parametr=types}}
    </section>
    <hr>
    <section>
        {{>title data="Syntax" big=false}}
        
        {{#each syntax}}
            <b>{{@key}}:</b>
            {{>js parametr=this}}
        {{/each}}
    </section>
    <hr>
    <section>
        {{>title data="Features" big=false}}
        {{>js parametr=features}}
    </section>
    <hr>
    <section>
        {{>title data="Libraries" big=false}}
        {{>js parametr=libraries}}
    </section>
    <hr>
    <section>
        {{>title data="Tools" big=false}}
        {{>js parametr=tools}}
    </section>
    <hr>
    <section>
        {{>title data="Community" big=false}}
        {{#each community}}
        {{> link text=name href="#" noLine=true}} - <em>{{type}}</em>
        <br>
        {{/each}}
    </section>


  </main>
</div>

