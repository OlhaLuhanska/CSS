<section>
    {{>title data=header big=true}}
    {{#with purchase}}
    <div class="row g-4">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    <a href="#" class="nav-link {{#if @first}} active {{/if}}">{{this}}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row my-2">
        {{#with actionBlock}}
        {{#with input}}
        <div class="col-4 gy-3">
            <input placeholder={{placeholder}} class="form-control">
        </div>
        {{/with}}
        <div class="col-8 py-3 gx-2">
            {{#each buttons}}
            <a href="{{link}}"
                class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}} {{#if isDanger}} btn-outline-danger {{/if}} px-3">{{text}}</a>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <hr class="my-2">
    {{> purchaseItem}}
    {{/with}}
    <hr class="my-5">
</section>

{{#with userInfo}}
<section>
    {{>title data=title big=false}}
    <div class="pt-3">
        <div class='card p-3'>
            {{#with profileData}}
            <h4>{{title}}</h4>
            <div class="pt-3">
                <div class='card p-3'>
                    <div class="row">
                        {{#each fullName}}
                        <div class="col-4">
                            <h6>{{title}}</h6>
                            <h4>{{value}}</h4>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="pt-3">
                <div class='card p-3'>
                    <div class="row">
                        {{#with otherInfo}}
                        {{#each this}}
                        <div class="col-4">
                            <h6>{{title}}</h6>
                            <h4>{{value}}</h4>
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
            <div class="pt-3">
                <div class='card px-3'>
                    <div class="row">
                        {{#each buttons}}
                        <div class="col-4">
                            <a href="{{link}}"
                                class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-danger {{/if}} my-4">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="pt-3">
        <div class='card p-3'>
            {{#with recipients}}
            <h4>{{title}}</h4>
            <div class="row">
                {{#each users}}
                <div class="col-4">
                    <div class="pt-3">
                        <div class='card p-3'>
                            <h4>{{name}}</h4>
                            <h5>{{phone}}</h5>
                            <div class="col-4">
                                {{#with button}}
                                <a href="{{link}}" class="btn btn-primary my-2">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>
    <div class="pt-3">
        <div class='card p-3'>
            {{#with contacts}}
            <h4>{{title}}</h4>
            <div class="row">
                {{#each contactData}}
                <div class="col-4">
                    <div class="pt-3">
                        <div class='card p-3'>
                            <h6>{{title}}</h6>
                            <h4>{{value}}</h4>
                            <div class="col-4">
                                {{#with button}}
                                <a href="{{link}}"
                                    class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}} my-2">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>

</section>
{{/with}}