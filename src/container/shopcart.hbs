<main class="row">
    <section>
        {{#with header}}
        {{>title data=title big=true}}
        {{#with button}}
        <a href={{link}} class="btn btn-outline-secondary">{{text}}</a>
        {{/with}}
        {{/with}}
        <hr class="my-5">
    </section>

    <section>
        {{#each goodsBlock}}
        {{> cartGoodsItem}}
        {{/each}}
        <hr class="my-5">
    </section>

    <section>
        {{#with total}}
        {{>title data=title big=false}}
        <h2>{{amount}}</h2>
        <p>{{delivery}}</p>

        {{#each buttons}}
        <div class="py-2">
            <a href={{link}}
                class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}}">{{text}}</a>
        </div>
        {{/each}}

        {{/with}}
        <hr class="my-5">
    </section>

    <section>
        {{#with goodsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        {{> shopcard}}
        {{/with}}
        <hr class="my-5">
    </section>

    <section class="mx-0 px-0">
        {{#with subscribe}}
        <div class="card text-bg-dark">
            <div class="card-body">
                <h2 class="card-title">{{header}}</h2>
                <p class="my-4">{{description}}</p>
                {{#each buttons}}
                <div class="py-2">
                    <a href={{link}} class="btn btn-primary">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>


</main>